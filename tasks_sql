/*** POSTGRES ****/
CREATE TABLE test(
alien_id INT,
alien_name VARCHAR(255),
alien_type VARCHAR(255),
alien_color VARCHAR(255),
witness_id INT,
witness_name VARCHAR(255),
witness_last_name VARCHAR(255),
witness_address VARCHAR(255),
witness_age INT,
location_id INT,
lat VARCHAR(255),
lon VARCHAR(255),
place VARCHAR(255),
country VARCHAR(255),
region VARCHAR(255),
time_of_day VARCHAR(255)
);

/*DOUBLE PRECISION*/

/**************** NEW TABLES *************************************/
/* MASTER TABLE */
create table master(
alien_id INT,
location_id INT,
region_id INT,
witness_id INT,
time_of_day VARCHAR(255),
FOREIGN KEY (alien_id) REFERENCES alien (alien_id),
FOREIGN KEY (location_id) REFERENCES location (location_id),
FOREIGN KEY (region_id) REFERENCES region (region_id),
FOREIGN KEY (witness_id) REFERENCES witness (witness_id)
);

/*TABLE ALIEN*/
create table alien(
alien_id INT PRIMARY KEY,
alien_name VARCHAR(255),
alien_type VARCHAR(255),
alien_color VARCHAR(255)
);

/* TABLE LOCATION*/
create table location(
location_id INT PRIMARY KEY,
lat VARCHAR(255),
lon VARCHAR(255),
place VARCHAR(255)
);

/* TABLE REGION*/
create table region(
region_id SERIAL PRIMARY KEY,
country VARCHAR(255),
region VARCHAR(255)
);


/*TABLE WITNESS*/
create table witness(
witness_id INT PRIMARY KEY,
witness_name VARCHAR(255),
witness_last_name VARCHAR(255),
witness_address TEXT,
witness_age INT
);



