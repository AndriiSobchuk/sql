create table aliens(
alien_id int,
alien_name varchar,
alien_type varchar,
alien_color varchar,
witness_id int,
primary key(alien_id)
);

////// TABLE 1 ///
create table aliens(
alien_id int,
alien_name varchar,
alien_type varchar,
alien_color varchar,
primary key(alien_id)
);


//// TABLE 2 ////
create table witness(
id SERIAL PRIMARY KEY,
witness_id int,
witness_name varchar,
witness_last_name varchar,
witness_address varchar,
witness_age int,
FOREIGN KEY (witness_id) REFERENCES aliens (alien_id)
);


///// TABLE 3 ///
create table location(
id SERIAL PRIMARY KEY,
location_id int,
lat float,
lon float,
alt varchar,
country varchar,
region varchar,
time_of_day varchar,
FOREIGN KEY (location_id) REFERENCES aliens (alien_id)
);

/*** MARIADB ****/
CREATE TABLE test(
alien_id INT(10),
alien_name VARCHAR(255),
alien_type VARCHAR(255),
alien_color VARCHAR(255),
witness_id INT(10),
witness_name VARCHAR(255),
witness_last_name VARCHAR(255),
witness_address VARCHAR(255),
witness_age INT,
location_id INT,
lat FLOAT(10,5),
lon FLOAT (10,5),
place VARCHAR(255),
country VARCHAR(255),
region VARCHAR(255),
time_of_day VARCHAR(255)
);

